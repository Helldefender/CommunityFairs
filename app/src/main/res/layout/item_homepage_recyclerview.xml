<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="?attr/mColorBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/mColorBackground"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_avatar"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="?attr/mColorBackground"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/item_username"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_avatar"
                android:background="?attr/mColorBackground"
                android:gravity="left|center_vertical"
                android:text="."
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_content"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/item_title"
                android:layout_alignStart="@+id/item_title"
                android:layout_below="@+id/item_title"
                android:background="?attr/mColorBackground"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="4"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=".."
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_browse"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/mColorBackground"
                    android:drawableLeft="@mipmap/browse"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="."
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_likes"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/mColorBackground"
                    android:drawableLeft="@mipmap/likes"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="."
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_avatar"
                android:layout_marginTop="2dp"
                android:background="?attr/mColorBackground"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:lines="2"
                android:maxLines="3"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=".."
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_thumbnail"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="?attr/mColorBackground"
            android:scaleType="fitXY"
            android:src="@drawable/star" />

    </LinearLayout>
</android.support.v7.widget.CardView>