<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary_color_gradient"
        android:paddingBottom="10dp"
        android:paddingTop="35dp">

        <TextView
            android:id="@+id/title_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/arrow_left_white"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="收藏"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_save_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:tabBackground="@color/tabBackgroundColor"
        app:tabIndicatorColor="#57B6EF"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/tabSelectTextColor"
        app:tabTextAppearance="@style/MyTabTextAppearance" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_drawer_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>