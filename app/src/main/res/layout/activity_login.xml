<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="96dp"
                android:src="@mipmap/logo" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_login_account"
                        android:layout_width="300dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="44dp"
                        android:backgroundTint="#dddddd"
                        android:drawablePadding="15dp"
                        android:hint="@string/login_hint_account"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_login_password"
                        android:layout_width="300dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#dddddd"
                        android:drawablePadding="15dp"
                        android:hint="@string/login_hint_password"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/login_account_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:text="乐活号"
                        android:textColor="#bfbfbf"
                        android:textSize="13sp" />

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_register_account"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#eeeeee"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:hint="@string/input_phone"
                        android:longClickable="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/login_username_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="昵称"
                        android:textColor="#bfbfbf"
                        android:textSize="13sp" />

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_register_nickname"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#eeeeee"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:hint="@string/input_username"
                        android:longClickable="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/login_password_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="密码"
                        android:textColor="#bfbfbf"
                        android:textSize="13sp" />

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_register_password"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#eeeeee"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:hint="@string/input_password"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/login_password_confirm_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="再次输入"
                        android:textColor="#bfbfbf"
                        android:textSize="13sp" />

                    <com.helldefender.enjoylife.widget.ClearEditText
                        android:id="@+id/edit_register_password_confirm"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#eeeeee"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:hint="@string/input_password_confirm"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#777777"
                        android:textColorHint="#bfbfbf"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />
                </LinearLayout>


            </FrameLayout>

            <TextView
                android:id="@+id/login_textview"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_selector"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@drawable/login_btn_textview_selector"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/register_login_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/register_part1"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/register_login_tip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/register_login_question"
                    android:text="@string/register_part2"
                    android:textColor="#f5b550"
                    android:textSize="12sp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>