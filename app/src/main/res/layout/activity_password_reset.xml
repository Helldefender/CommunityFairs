<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F7"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/bg_user_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="35dp">
        <TextView
            android:id="@+id/tv_password_reset_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/arrow_left_white"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:text="忘记密码"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="17dp">
            <EditText
                android:id="@+id/et_password_reset_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/register_phone_uncheck"
                android:drawablePadding="18dp"
                android:hint="请输入手机号"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btn_password_reset_check"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_marginLeft="83dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/bg_corner_btn_blue"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@drawable/tc_register_check_btn"
                android:textSize="13sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#ECECEC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/et_password_reset_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:drawableLeft="@drawable/register_phone"
                android:drawablePadding="18dp"
                android:hint="请输入验证码"
                android:textColor="#333333"
                android:textColorHint="#929292"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#ECECEC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingBottom="12dp">
            <EditText
                android:id="@+id/et_password_reset_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/register_password"
                android:drawablePadding="18dp"
                android:hint="设置新密码（6到20位字符）"
                android:textColor="#333333"
                android:textColorHint="#929292"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/img_password_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/register_password_enable" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_password_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_corner_btn_blue"
        android:text="确定"
        android:enabled="false"
        android:textColor="@drawable/tc_register_btn"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_password_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="点此用邮箱找回"
        android:textColor="#57B6EF"
        android:textSize="13sp" />
</LinearLayout>